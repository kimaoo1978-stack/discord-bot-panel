<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BaÅŸvurular - Discord Bot</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <h1>ğŸ¤– Discord Bot Panel</h1>
      <div class="nav-links">
        <a href="/dashboard">Dashboard</a>
        <a href="/applications" class="active">BaÅŸvurular</a>
        <a href="/settings">Ayarlar</a>
        <div class="user-info">
          <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar">
          <span><%= user.username %></span>
        </div>
        <a href="/logout" class="btn btn-secondary">Ã‡Ä±kÄ±ÅŸ</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <h2>BaÅŸvurular ğŸ“</h2>

    <div class="filters">
      <button class="filter-btn active" onclick="filterApps('all')">TÃ¼mÃ¼</button>
      <button class="filter-btn" onclick="filterApps('pending')">Bekleyen</button>
      <button class="filter-btn" onclick="filterApps('approved')">Kabul</button>
      <button class="filter-btn" onclick="filterApps('rejected')">Red</button>
    </div>

    <div class="applications-table">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>KullanÄ±cÄ±</th>
            <th>TÃ¼r</th>
            <th>Durum</th>
            <th>Tarih</th>
            <th>Ä°ÅŸlem</th>
          </tr>
        </thead>
        <tbody>
          <% applications.forEach(app => { %>
            <tr data-status="<%= app.status.toLowerCase() %>">
              <td>#<%= app.id %></td>
              <td><%= app.user %></td>
              <td><span class="badge badge-<%= app.type.toLowerCase() %>"><%= app.type %></span></td>
              <td>
                <% if (app.status === 'Bekliyor') { %>
                  <span class="badge badge-warning">â³ Bekliyor</span>
                <% } else if (app.status === 'Kabul') { %>
                  <span class="badge badge-success">âœ… Kabul</span>
                <% } else { %>
                  <span class="badge badge-danger">âŒ Red</span>
                <% } %>
              </td>
              <td><%= app.date %></td>
              <td>
                <% if (app.status === 'Bekliyor') { %>
                  <button class="btn-small btn-success" onclick="handleApp(<%= app.id %>, 'kabul')">âœ…</button>
                  <button class="btn-small btn-danger" onclick="handleApp(<%= app.id %>, 'red')">âŒ</button>
                <% } else { %>
                  <button class="btn-small btn-info" onclick="viewApp(<%= app.id %>)">ğŸ‘ï¸</button>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <footer>
    <p>&copy; 2026 Discord Bot Panel</p>
  </footer>

  <script>
    function filterApps(status) {
      const buttons = document.querySelectorAll('.filter-btn');
      buttons.forEach(b => b.classList.remove('active'));
      event.target.classList.add('active');

      const rows = document.querySelectorAll('tbody tr');
      rows.forEach(row => {
        if (status === 'all') {
          row.style.display = '';
        } else {
          const rowStatus = row.dataset.status;
          if (
            (status === 'pending' && rowStatus === 'bekliyor') ||
            (status === 'approved' && rowStatus === 'kabul') ||
            (status === 'rejected' && rowStatus === 'red')
          ) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        }
      });
    }

    async function handleApp(id, action) {
      if (!confirm(`Bu baÅŸvuruyu ${action} etmek istediÄŸinden emin misin?`)) return;

      try {
        const res = await fetch(`/api/application/${id}/${action}`, { method: 'POST' });
        const data = await res.json();
        
        if (data.success) {
          alert(data.message);
          location.reload();
        }
      } catch (err) {
        alert('Hata oluÅŸtu!');
      }
    }

    function viewApp(id) {
      alert(`BaÅŸvuru #${id} detaylarÄ± (yakÄ±nda eklenecek)`);
    }
  </script>
</body>
</html>
